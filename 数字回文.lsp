;;;[功能] 数字回文
;;;测试：(nure (getstring "输入数字 "))
(defun nure (s / s n a d1)
  (setq n (strlen s))
  (setq a "")
  (repeat n
    (setq d1 (chr (vl-string-elt s (1- n))))
    (setq a (strcat a d1))
    (setq n (1- n))
  )
  (alert (strcat "数字回文是：" a))
  (princ)
)








































































































































































































































































































































































































































































































































































































































































































































































































